
<div class="container">
	
	<div class="row">
		<div class="col-md-offset-3 col-md-6 col-logo">
			<%= image_tag("logo.png") %>
			<h1>Circle of First</h1>
		</div>
	</div>
	
	<div class="row row-divider">
		<div class="col-md-12">
			<hr>
		</div>
	</div>
	
	<div class="row row-main-nav">
		
		<div class="col-md-offset-1 col-md-2">
			<div class="item" data-content="<%= t('welcome.navigation.auth.description') %>">
				<a href="#">
					<div><i class="fa fa-lock"></i></div>
					<h3><%= t('welcome.navigation.auth.name') %></h3>
				</a>
			</div>
		</div>
		
		<div class="col-md-2">
			<div class="item" data-content="<%= t('welcome.navigation.voice.description') %>">
				<a href="#">
					<div><i class="fa fa-microphone"></i></div>
					<h3><%= t('welcome.navigation.voice.name') %></h3>
				</a>
			</div>
		</div>
		
		<div class="col-md-2">
			<div class="item disabled" data-content="<%= t('welcome.navigation.disabled') %>">
				<a href="#">
					<div><i class="fa fa-comments"></i></div>
					<h3><%= t('welcome.navigation.irc.name') %></h3>
				</a>
			</div>
		</div>
		
		<div class="col-md-2">
			<div class="item disabled" data-content="<%= t('welcome.navigation.disabled') %>">
				<a href="#">
					<div><i class="fa fa-file-text"></i></div>
					<h3><%= t('welcome.navigation.wiki.name') %></h3>
				</a>
			</div>
		</div>
		
		<div class="col-md-2">
			<div class="item" data-content="<%= t('welcome.navigation.changelog.description') %>">
				<a href="#">
					<div><i class="fa fa-list"></i></div>
					<h3><%= t('welcome.navigation.changelog.name') %></h3>
				</a>
			</div>
		</div>
		
	</div>